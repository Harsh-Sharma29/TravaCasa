<% layout('layouts/boilerplate') %>

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-home"></i>
                    My Listings
                </h2>
                <a href="/listings/new" class="btn btn-success">
                    <i class="fas fa-plus"></i>
                    Add New Listing
                </a>
            </div>

            <% if (userListings.length > 0) { %>
                <div class="row">
                    <% userListings.forEach(listing => { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title"><%= listing.title %></h5>
                                    <p class="card-text"><%= listing.description.substring(0, 100) %>...</p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt"></i>
                                            <%= listing.location %>
                                        </small>
                                    </p>
                                    <p class="card-text">
                                        <strong>â‚¹<%= listing.price.toLocaleString('en-IN') %></strong> / night
                                    </p>
                                    <div class="btn-group" role="group">
                                        <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this listing?')">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-home fa-3x text-muted mb-3"></i>
                    <h3 class="text-muted">No listings found</h3>
                    <p class="text-muted">You haven't created any listings yet.</p>
                    <a href="/listings/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        Create Your First Listing
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>
